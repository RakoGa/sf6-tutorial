{% extends "template.html.twig" %}

{% block title %}Users{% endblock %}

{% block PageTitle %}Users{% endblock %}

{% block body %}
    {% include "fragments/date-jour.html.twig" %}

    <div class="alert alert-warning">
        <a href="{{path('tab', {nbNotes: 7})}}">Stats table</a>
    </div>

    <table class="table">
        <tr class="table-active">
            <th>First name</th>
            <th>Name</th>
            <th>Age</th>
            <td>Message</td>
        </tr>

        {% for user in users %}
            {# {% if loop.index is odd %}
                <tr class="table-primary">
            {% else %}
                <tr class="table-info">
            {% endif %} #}
                <tr class="table-{% if loop.index is odd %}primary{% else %}info{% endif %}">
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.age }}</td>
                    <td>{{ render(controller('App\\Controller\\FirstController::sayHello', {firstname: user.firstname, name: user.name, age: user.age})) }}</td>
                </tr>
        {% endfor %}
    </table>
{% endblock %}